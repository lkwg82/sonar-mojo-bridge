                  <id>integration-tests</id>
                  <goals>
                    <goal>integration-test</goal>
                    <goal>verify</goal>
                  </goals>
                </execution>
              </executions>
              <configuration>
                <systemProperties>
                  <property>
                    <name>jdbcDriver</name>
                    <value>${test.jdbcDriver}</value>
                  </property>
                  <property>
                    <name>jdbcUrl</name>
                    <value>${test.jdbcUrl}</value>
                  </property>
                </systemProperties>
                <includes>
                  <include>**/*IT.java</include>
                </includes>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
